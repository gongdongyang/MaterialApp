<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                style="@style/ToolBarLightStyle"
                app:title="Chips" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="Choice"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

            <include
                android:id="@+id/chips_group_choice"
                layout="@layout/item_chips_group_choice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="Filter"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

            <include
                android:id="@+id/chips_group_filter"
                layout="@layout/item_chips_group_filter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="Action"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

            <include
                android:id="@+id/chips_group_action"
                layout="@layout/item_chips_group" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="Entry"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

            <include
                android:id="@+id/chips_group_entry"
                layout="@layout/item_chips_group_entry" />

        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>